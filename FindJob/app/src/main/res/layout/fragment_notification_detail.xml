<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.NotificationDetail">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="16dp"
           android:layout_marginLeft="8dp"
           android:layout_marginRight="8dp"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Thông báo từ Admin"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:textSize="16sp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:layout_marginBottom="30dp"
               android:textStyle="italic"
               android:id="@+id/txt_error_notificationadmin"
               android:textColor="@color/black"
               android:gravity="center"
               android:text="Bạn không có thông báo nào từ admin!" />

           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/rv_notificationadmin_detail"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Thông báo của bạn"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:textSize="16sp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:id="@+id/txt_error_notification"
               android:textStyle="italic"
               android:textColor="@color/black"
               android:gravity="center"
               android:text="Bạn không có thông báo nào!" />

           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/rv_notification_detail"/>
       </LinearLayout>

   </ScrollView>

</LinearLayout>